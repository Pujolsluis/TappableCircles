    <Grid
        Margin="32"
        ColumnDefinitions="Auto, Auto, Auto, Auto, Auto"
        HorizontalOptions="CenterAndExpand"
        RowDefinitions="Auto, Auto, Auto, Auto, Auto">
        <!--  Top  -->
        <Ellipse
            Grid.Row="0"
            Grid.Column="1"
            HeightRequest="48"
            HorizontalOptions="End"
            Stroke="Red"
            StrokeThickness="4"
            WidthRequest="48">
            <Ellipse.GestureRecognizers>
                <TapGestureRecognizer Command="{Binding CircleTappedCommand}" CommandParameter="First Top" />
            </Ellipse.GestureRecognizers>
        </Ellipse>
        <Ellipse
            Grid.Row="0"
            Grid.Column="2"
            HeightRequest="48"
            HorizontalOptions="Start"
            Stroke="Red"
            StrokeThickness="4"
            WidthRequest="48">
            <Ellipse.GestureRecognizers>
                <TapGestureRecognizer Command="{Binding CircleTappedCommand}" CommandParameter="Second Top" />
            </Ellipse.GestureRecognizers>
        </Ellipse>
        <!--  Left  -->
        <Ellipse
            Grid.Row="1"
            Grid.Column="0"
            HeightRequest="48"
            HorizontalOptions="Start"
            Stroke="Red"
            StrokeThickness="4"
            WidthRequest="48">
            <Ellipse.GestureRecognizers>
                <TapGestureRecognizer Command="{Binding CircleTappedCommand}" CommandParameter="First Left" />
            </Ellipse.GestureRecognizers>
        </Ellipse>
        <Ellipse
            Grid.Row="2"
            Grid.Column="0"
            HeightRequest="48"
            HorizontalOptions="Start"
            Stroke="Red"
            StrokeThickness="4"
            WidthRequest="48">
            <Ellipse.GestureRecognizers>
                <TapGestureRecognizer Command="{Binding CircleTappedCommand}" CommandParameter="Second Left" />
            </Ellipse.GestureRecognizers>
        </Ellipse>
        <!--  Center  -->
        <Ellipse
            Grid.Row="1"
            Grid.RowSpan="2"
            Grid.Column="1"
            Grid.ColumnSpan="2"
            HeightRequest="100"
            HorizontalOptions="Center"
            Stroke="Red"
            StrokeThickness="4"
            WidthRequest="100">
            <Ellipse.GestureRecognizers>
                <TapGestureRecognizer Command="{Binding CircleTappedCommand}" CommandParameter="Center" />
            </Ellipse.GestureRecognizers>
        </Ellipse>
        <!--  Right  -->
        <Ellipse
            Grid.Row="1"
            Grid.Column="3"
            HeightRequest="48"
            HorizontalOptions="Start"
            Stroke="Red"
            StrokeThickness="4"
            WidthRequest="48">
            <Ellipse.GestureRecognizers>
                <TapGestureRecognizer Command="{Binding CircleTappedCommand}" CommandParameter="First Right" />
            </Ellipse.GestureRecognizers>
        </Ellipse>
        <Ellipse
            Grid.Row="2"
            Grid.Column="3"
            HeightRequest="48"
            HorizontalOptions="Start"
            Stroke="Red"
            StrokeThickness="4"
            WidthRequest="48">
            <Ellipse.GestureRecognizers>
                <TapGestureRecognizer Command="{Binding CircleTappedCommand}" CommandParameter="Second Right" />
            </Ellipse.GestureRecognizers>
        </Ellipse>

        <!--  Bottom  -->
        <Ellipse
            Grid.Row="3"
            Grid.Column="1"
            HeightRequest="48"
            HorizontalOptions="Start"
            Stroke="Red"
            StrokeThickness="4"
            WidthRequest="48">
            <Ellipse.GestureRecognizers>
                <TapGestureRecognizer Command="{Binding CircleTappedCommand}" CommandParameter="First Bottom" />
            </Ellipse.GestureRecognizers>
        </Ellipse>
        <Ellipse
            Grid.Row="3"
            Grid.Column="2"
            HeightRequest="48"
            HorizontalOptions="Start"
            Stroke="Red"
            StrokeThickness="4"
            WidthRequest="48">
            <Ellipse.GestureRecognizers>
                <TapGestureRecognizer Command="{Binding CircleTappedCommand}" CommandParameter="Second Bottom" />
            </Ellipse.GestureRecognizers>
        </Ellipse>
    </Grid>
</ContentPage>
